<link rel="stylesheet" type="text/css" href="/public/css/host.css">
<section class="state init">
  <div class="logo"></div>

  <div class="players">
    <div class="players-column green">
      <div class="green-team">Green Team</div>
      <div class="players-content"></div>
    </div>
    <div class="players-vs">VS</div>
    <div class="players-column blue">
      <div class="blue-team">Blue Team</div>
      <div class="players-content"></div>
    </div>
    <script type="text/x-handlebars" id="template-players">
    <ul>
    \{{#each players}}
      <li class="player">\{{name}}</li>
    \{{/each}}
    </ul>
    </script>
  </div>

  <h2 class="code-information">Join the game on <span>Apocabuzz.com</span> with code <span class="code">{{code}}</span></h2>
</section>

<section class="state game">
  <div class="players">
    <div class="players-column green">
      <div class="green-team">Green Team</div>
    </div>
    <div class="players-vs">VS</div>
    <div class="players-column blue">
      <div class="blue-team">Blue Team</div>
    </div>
  </div>

  <div class="hives">
     <div class="green-hive"></div>
     <div class="blue-hive"></div>
  </div>
</section>

<section class="game-state bee-state">
  <div class="bee-content">
    <div class="bee-information">
      <div class="bee-information-line" style="font-size:5vh;left:20%;margin-bottom:1vh;"><span>Buzz Aldrin</span></div>
      <div class="bee-information-line" style="font-size:3vh;left:0%;margin-bottom:2vh;">Employment: <span>Worker</span></div>
      <div class="bee-information-line" style="font-size:4vh;left:10%;margin-bottom:0;">Assigned: <span>Pollen</span></div>
      <div class="bee-information-line" style="font-size:3vh;left:15%;margin-bottom:1vh;">Birth: <span>5d ago</span></div>
      <div class="bee-information-line" style="font-size:4vh;left:0%;margin-bottom:0;">Speed: <span>5 flowers/min</span></div>
    </div>
    <div class="bee-center">
      <div class="bee-container">
        <div class="bee"><div class="bee-in">
          <div class="bee-wings">
            <div class="bee-left-wings"></div>
            <div class="bee-right-wings"></div>
          </div>
          <div class="bee-body"></div>
          <div class="bee-left-hand"></div>
          <div class="bee-right-hand"></div>
          <div class="bee-head"></div>
          <div class="bee-left-antenna"></div>
          <div class="bee-right-antenna"></div>
          <div class="bee-left-eye"></div>
          <div class="bee-right-eye"></div>
          <div class="bee-mouth"></div>
        </div></div>
        <div class="bee-shadow"></div>
      </div>
    </div>
    <div class="bee-chat">
      <div class="bee-chat-bubble" style="left: 5vw;">Let me in, pleazzz...</div>
      <div class="bee-chat-bubble" style="left: 0vw;">I just came back from the <span>marguerites</span> and I saw some weird bees there!</div>
      <div class="bee-chat-bubble" style="left: 5vw;">Did my buddy <span>Lili</span> already enter? I think she turned into a <span>zombee</span>!!!</div>
    </div>
  </div>
  <div class="votes">
    <h2>Votes</h2>
    <div class="votes-content">
      <div class="vote green"></div>
      <div class="vote"></div>
      <div class="vote"></div>
      <div class="vote blue"></div>
    </div>
  </div>
</section>

<section class="game-state bulletin">
  <div class="bulletin-background-fader">
    <div class="bulletin-background"></div>
    <div class="bulletin-gradient"></div>
  </div>
  <div class="bulletin-content">
    <h1>Bumbletin</h1>
    <p></p>
  </div>
</section>

<section class="state end">
  <div class="winner">
    <div class="winner-content">
      <script type="text/x-handlebars" id="template-winner">
      Team \{{winner}} won!
      </script>
    </div>
  </div>
</section>

<script>
runHost('{{code}}');
</script>
